<h1>Task #<%= @task.id %>: <%= @task.title %></h1>

<h2>State: </h2>
<%= check_box("completed", @task.id, {checked: @task.completed, onclick: "return false"}) %>
<br>

<h2>Description:</h2>
<p><%= @task.details %></p>

<p>
<%= link_to "Edit", edit_path %> |
<%= link_to "Delete", task_path, method: :delete, data: { confirm: "Are you sure?"  } %>
</p>
